@model Product
@{
    ViewData["Title"] = "ساخت محصول";
}
<div asp-validation-summary="ModelOnly">
</div>
<br />
<br />

<form method="post">
    <div class="row">
        <label asp-for="Name"></label>
        <input type="text" asp-for="Name" placeholder="Product name" required="required" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="row">
    <label asp-for="Number"></label>
        <input type="text" asp-for="Number" placeholder="Product Number" required="required" />
        <span asp-validation-for="Number"></span>
    </div>
    <div class="row">
        <label asp-for="Price"></label>
        <input type="text" asp-for="Price" placeholder="Product Price" required="required" />
        <span asp-validation-for="Price"></span>
    </div>
    
    <button type="submit" asp-controller="Product" asp-action="Create" class="btn btn-primary">ساخت محصول</button>
</form>
@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}
